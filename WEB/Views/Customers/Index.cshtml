
@{
    ViewData["Title"] = "Index";
}
@model List<CustomerDto>
<a class="btn btn-primary" asp-controller="Customers" asp-action="Save">Save Customer</a>
    <table class="table table-striped table-bordered table-sm">
        <thead>
            <tr>
            <th>Id</th>
            <th>Name</th>
            <th>SurName</th>
            <th>PhoneNumber</th>
            <th>Adress</th>
            <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
               <td>@item.Id</td>
                <td>@item.Name</td>
                 <td>@item.Surname</td>
                   <td>@item.PhoneNumber</td>
                  <td>@item.Adress</td>
             
                    <td>
                        <a class="btn btn-warning" asp-controller="Customers" asp-action="Update" asp-route-id="@item.Id">Update</a>
                          <a class="btn btn-danger" asp-controller="Customers" asp-action="Remove" asp-route-id="@item.Id">Delete</a>
                        </td>
                     </tr>
            }
        </tbody>
    </table>


