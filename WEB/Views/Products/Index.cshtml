

@{
    ViewData["Title"] = "Index";
}
@model List<ProductWithCustomerDto>
<a class="btn btn-primary" asp-controller="Products" asp-action="Save">Save Product</a>
    <table class="table table-striped table-bordered table-sm">
        <thead>
            <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Customer</th>
      
            <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
               <td>@item.Id</td>
                <td>@item.Name</td>
                 <td>@item.Price</td>
                  <td>@item.Quantity</td>
                   <td>@item.Customer.Name</td>
                 
                    <td>
                        <a class="btn btn-warning" asp-controller="Products" asp-action="Update" asp-route-id="@item.Id">Update</a>
                          <a class="btn btn-danger" asp-controller="Products" asp-action="Remove" asp-route-id="@item.Id">Delete</a>
                        </td>
                     </tr>
            }
        </tbody>
    </table>


